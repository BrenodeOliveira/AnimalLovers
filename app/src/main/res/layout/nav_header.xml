<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAnimaLovers"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_nav_main"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/content_user_photo"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name_owner_account_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="@string/empty"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/img_profile_nav_main"
        app:layout_constraintStart_toEndOf="@id/img_profile_nav_main"
        app:layout_constraintTop_toTopOf="@id/img_profile_nav_main" />

    <TextView
        android:id="@+id/txt_local_account_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:text="@string/empty"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@id/img_profile_nav_main"
        app:layout_constraintTop_toBottomOf="@id/txt_name_owner_account_main" />


</androidx.constraintlayout.widget.ConstraintLayout>