<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="10dp">

<TextView
    android:layout_gravity="center"
    android:id="@+id/tv_pet_name_analize_friendship_request"
    android:layout_width="183dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:text="Nome"
    android:textAlignment="center"
    android:textSize="28sp" />

<TextView
    android:layout_gravity="center"
    android:id="@+id/tv_mutual_friends_analize_friendship_request"
    android:layout_width="278dp"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="20sp"
    tools:text="Amigos em comum: 89"
    android:layout_marginBottom="5dp"/>

<ImageView
    android:layout_gravity="center"
    android:id="@+id/iv_icon_foto_perfil_analize_friendship_request"
    android:layout_width="184dp"
    android:layout_height="100dp"
    android:contentDescription="ABC"
    app:srcCompat="@drawable/animalovers_logo_simples" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="clip_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm_friendship_request"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="7dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/ic_coracao_aceitar"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_decline_friendship_request"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/background_button_transparent_login"
            android:foreground="@drawable/ic_coracao_cancelar"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>