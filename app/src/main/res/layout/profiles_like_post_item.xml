<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:gravity="end"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_pet_name_likes_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/iv_icon_foto_perfil_pet_likes_modal"
        app:layout_constraintStart_toEndOf="@id/iv_icon_foto_perfil_pet_likes_modal"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        tools:text="Nome" />

    <TextView
        android:id="@+id/tv_pet_description_likes_modal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_name_likes_modal"
        app:layout_constraintStart_toStartOf="@id/tv_pet_name_likes_modal"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        tools:text="Descrição do pet em questão" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_icon_foto_perfil_pet_likes_modal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:srcCompat="@drawable/animalovers_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>